printf "\n"
echo "<Select Target Platform>"
echo "	(1) : PC/Server"
echo "	(2) : (Tizen)Mobile"
echo "	(3) : (Tizen)TV"
echo "	(4) : (Tizen)Wearable"
echo "	(5) : (Android)Mobile"

read TARGET_TYPE_INDEX
	case $TARGET_TYPE_INDEX in
		1)
			echo "<Target Type : PC/Server (x86-x64)>"
			export TARGET_TYPE=X64
			export OS_TYPE=LINUX
			printf "\n"
			;;
		2)
			echo "<Target Type : Tizen Mobile>"
			export TARGET_TYPE=TM1
			export OS_TYPE=TIZEN
			printf "\n"	
			;;
		3)
			echo "<Target Type : Tizen TV>"
			export TARGET_TYPE=KANTM
			export OS_TYPE=TIZEN
			printf "\n"
			;;
		4)
                        echo "<Target Type : Tizen Gear>"
                        export TARGET_TYPE=GEARS3
                        export OS_TYPE=TIZEN
                        printf "\n"
                        ;;
		5)
                        echo "<Target Type : Galaxy Mobile>"
                        export TARGET_TYPE=NOTE4
                        export OS_TYPE=ANDROID
                        printf "\n"
                        ;;
	esac


touch env.tmp
printf "TARGET_TYPE=%s\nOS_TYPE=%s\nexport TARGET_TYPE\nexport OS_TYPE" $TARGET_TYPE $OS_TYPE > env.tmp
mv env.tmp .env

